doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Kings Collection Customer Dashboard
    link(rel='stylesheet', href='/Styles/client-dashboard.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
  body
    //- Header
    header.header
      .container
        .header-content
          .logo
            i.fas.fa-crown
            span Kings Collection
          //- Main Navigation Tabs
          nav.main-nav
            a.nav-tab.active(href='/client-page', data-section='dashboard')
              i.fas.fa-home
              span Dashboard
            a.nav-tab(href='/orders', data-section='orders')
              i.fas.fa-box
              span My Orders
              span.badge 3
            a.nav-tab(href='/products', data-section='products')
              i.fas.fa-tags
              span Products
            a.nav-tab(href='/cart', data-section='cart')
              i.fas.fa-shopping-cart
              span Cart
              span.badge 5
            a.nav-tab(href='/messages', data-section='messages')
              i.fas.fa-envelope
              span Messages
              span.badge.new 2
            a.nav-tab(href='/payment-methods', data-section='payment-methods')
              i.fas.fa-credit-card
              span Payment
          .header-actions
            .search-box
              i.fas.fa-search
              input(type='text', placeholder='Search products...')
            .notifications
              button.notification-btn
                i.fas.fa-bell
                span.notification-count 4
            .user-menu
              .user-avatar
                img(src='https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg?auto=compress&cs=tinysrgb&w=100', alt='User')
              .user-info
                span.user-name John Doe
                span.user-status Premium Member
              .dropdown-menu
                a(href='/account', data-section='account')
                  i.fas.fa-user
                  | Profile Settings
                a(href='/support', data-section='support')
                  i.fas.fa-life-ring
                  | Help & Support
                a(href='/logout')
                  i.fas.fa-sign-out-alt
                  | Logout
    //- Main Content
    main.main-content
      .container
        //- Welcome Section with Digital Clock
        section.welcome-section
          .welcome-card
            .welcome-text
              h1
                | Welcome back, 
                span.highlight John!
              p Ready to discover amazing deals and new arrivals?
              .digital-clock
                .clock-display
                  span#current-time 12:00:00
                  span#current-date Monday, January 1, 2025
            .account-summary
              .summary-item
                .summary-icon
                  i.fas.fa-box
                .summary-content
                  .summary-number 24
                  .summary-label Total Orders
              .summary-item
                .summary-icon
                  i.fas.fa-dollar-sign
                .summary-content
                  .summary-number $4,850
                  .summary-label Total Spent
              .summary-item
                .summary-icon
                  i.fas.fa-calendar
                .summary-content
                  .summary-number Dec 28
                  .summary-label Last Order
              .summary-item
                .summary-icon
                  i.fas.fa-star
                .summary-content
                  .summary-number 2,450
                  .summary-label Loyalty Points
        //- Dashboard Grid
        .dashboard-grid
          //- Enhanced Sidebar Navigation
          aside.sidebar
            nav.sidebar-nav
              .nav-section
                h4 Main
                a.nav-item.active(href='/client-page', data-section='dashboard')
                  i.fas.fa-home
                  span Dashboard Home
                a.nav-item(href='/orders', data-section='orders')
                  i.fas.fa-box
                  span My Orders
                  span.count 3
                a.nav-item(href='/products', data-section='products')
                  i.fas.fa-tags
                  span Products
              .nav-section
                h4 Account
                a.nav-item(href='/account', data-section='account')
                  i.fas.fa-user-cog
                  span Account Details
                a.nav-item(href='/addresses', data-section='addresses')
                  i.fas.fa-map-marker-alt
                  span Addresses
                a.nav-item(href='/payment-methods', data-section='payment-methods')
                  i.fas.fa-credit-card
                  span Payment Methods
              .nav-section
                h4 Shopping
                a.nav-item(href='/wishlist', data-section='wishlist')
                  i.fas.fa-heart
                  span Wishlist
                  span.count 8
                a.nav-item(href='/cart', data-section='cart')
                  i.fas.fa-shopping-cart
                  span Cart
                  span.count 5
                a.nav-item(href='/reviews', data-section='reviews')
                  i.fas.fa-star
                  span Reviews
              .nav-section
                h4 Communication
                a.nav-item(href='/messages', data-section='messages')
                  i.fas.fa-envelope
                  span Messages
                  span.count.new 2
                a.nav-item(href='/notifications', data-section='notifications')
                  i.fas.fa-bell
                  span Notifications
                  span.count 4
              .nav-section
                h4 Services
                a.nav-item(href='/loyalty', data-section='loyalty')
                  i.fas.fa-gift
                  span Loyalty & Rewards
                a.nav-item(href='/subscriptions', data-section='subscriptions')
                  i.fas.fa-sync-alt
                  span Subscriptions
                a.nav-item(href='/referrals', data-section='referrals')
                  i.fas.fa-users
                  span Referrals
              .nav-section
                h4 Support
                a.nav-item(href='/settings', data-section='settings')
                  i.fas.fa-cog
                  span Settings
                a.nav-item(href='/support', data-section='support')
                  i.fas.fa-life-ring
                  span Support & Help
                a.nav-item.logout(href='/logout')
                  i.fas.fa-sign-out-alt
                  span Logout
          //- Main Dashboard Content
          .dashboard-content
            //- Dashboard Home Section
            section#dashboard.content-section.active
              .section-header
                h2 Dashboard Overview
                p Your personalized shopping experience at a glance
              //- Quick Stats
              .stats-grid
                .stat-card
                  .stat-icon.orders
                    i.fas.fa-box
                  .stat-content
                    .stat-number 24
                    .stat-label Orders This Year
                    .stat-trend.positive
                      i.fas.fa-arrow-up
                      span +15% from last year
                .stat-card
                  .stat-icon.wishlist
                    i.fas.fa-heart
                  .stat-content
                    .stat-number 8
                    .stat-label Wishlist Items
                    .stat-trend.neutral
                      span 2 items on sale
                .stat-card
                  .stat-icon.loyalty
                    i.fas.fa-star
                  .stat-content
                    .stat-number 2,450
                    .stat-label Loyalty Points
                    .stat-trend.positive
                      span Ready to redeem
                .stat-card
                  .stat-icon.savings
                    i.fas.fa-piggy-bank
                  .stat-content
                    .stat-number $245
                    .stat-label Total Saved
                    .stat-trend.positive
                      span Through deals & discounts
              //- Recent Activity & Recommendations
              .dashboard-widgets
                .widget.recent-orders
                  .widget-header
                    h3 Recent Orders
                    a.view-all(href='/orders', data-section='orders') View All
                  .order-list
                    .order-item
                      .order-image
                        img(src='https://images.pexels.com/photos/1598505/pexels-photo-1598505.jpeg?auto=compress&cs=tinysrgb&w=100', alt='Order')
                      .order-info
                        h4 Premium Cotton Shirt
                        p Order #KC-2024-001
                        span.order-date Dec 28, 2024
                      .order-status.shipped
                        i.fas.fa-truck
                        span Shipped
                    .order-item
                      .order-image
                        img(src='https://images.pexels.com/photos/1598507/pexels-photo-1598507.jpeg?auto=compress&cs=tinysrgb&w=100', alt='Order')
                      .order-info
                        h4 Designer Denim Jacket
                        p Order #KC-2024-002
                        span.order-date Dec 25, 2024
                      .order-status.delivered
                        i.fas.fa-check-circle
                        span Delivered
                .widget.recommendations
                  .widget-header
                    h3 Recommended for You
                    a.view-all(href='/products') Browse More
                  .product-grid
                    .product-card
                      .product-image
                        img(src='https://images.pexels.com/photos/1598508/pexels-photo-1598508.jpeg?auto=compress&cs=tinysrgb&w=300', alt='Leather Boots')
                        .product-badge New
                      .product-info
                        h4 Premium Leather Boots
                        .product-rating
                          .stars
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star-half-alt
                          span (4.8)
                        .product-price
                          span.current $299.99
                          span.original $349.99
                        button.btn.btn-primary Add to Cart
            //- Orders Section
            section#orders.content-section
              .section-header
                h2 Order History
                p Track and manage all your orders
              .orders-container
                .order-filters
                  .filter-group
                    select.filter-select
                      option(value='all') All Orders
                      option(value='processing') Processing
                      option(value='shipped') Shipped
                      option(value='delivered') Delivered
                      option(value='cancelled') Cancelled
                    input.search-input(type='text', placeholder='Search orders...')
                  button.btn.btn-outline.download-orders
                    i.fas.fa-download
                    | Export Orders
                .orders-list
                  .order-card
                    .order-header
                      .order-info
                        h4 Order #KC-2024-001
                        p December 28, 2024
                      .order-status.shipped
                        i.fas.fa-truck
                        span Shipped
                      .order-total $299.99
                    .order-items
                      .order-item
                        img(src='https://images.pexels.com/photos/1598505/pexels-photo-1598505.jpeg?auto=compress&cs=tinysrgb&w=100', alt='Product')
                        .item-details
                          h5 Premium Cotton Shirt
                          p Size: L, Color: White | Qty: 1
                          span.item-price $89.99
                      .order-item
                        img(src='https://images.pexels.com/photos/1598507/pexels-photo-1598507.jpeg?auto=compress&cs=tinysrgb&w=100', alt='Product')
                        .item-details
                          h5 Designer Denim Jacket
                          p Size: M, Color: Blue | Qty: 1
                          span.item-price $199.99
                    .order-actions
                      button.btn.btn-outline
                        i.fas.fa-truck
                        | Track Order
                      button.btn.btn-outline
                        i.fas.fa-receipt
                        | View Invoice
                      button.btn.btn-outline
                        i.fas.fa-redo
                        | Reorder
            //- Messages Section
            section#messages.content-section
              .section-header
                h2 Messages
                p Your communication hub
              .messages-container
                .message-filters
                  button.filter-btn.active(data-filter='all') All Messages
                  button.filter-btn(data-filter='unread') Unread (2)
                  button.filter-btn(data-filter='orders') Order Updates
                  button.filter-btn(data-filter='promotions') Promotions
                .messages-list
                  .message-item.unread
                    .message-avatar
                      i.fas.fa-truck
                    .message-content
                      .message-header
                        h4 Order Shipped
                        span.message-time 2 hours ago
                      p Your order #KC-2024-001 has been shipped and is on its way!
                      .message-actions
                        button.btn.btn-text Track Order
                        button.btn.btn-text Mark as Read
                  .message-item.unread
                    .message-avatar
                      i.fas.fa-gift
                    .message-content
                      .message-header
                        h4 Special Offer
                        span.message-time 5 hours ago
                      p Exclusive 25% off on your favorite items. Limited time offer!
                      .message-actions
                        button.btn.btn-text Shop Now
                        button.btn.btn-text Mark as Read
            //- Cart Section
            section#cart.content-section
              .section-header
                h2 Shopping Cart
                p Review your items before checkout
              .cart-container
                .cart-items
                  .cart-item
                    .item-checkbox
                      input#item1(type='checkbox', checked='')
                      label(for='item1')
                    .item-image
                      img(src='https://images.pexels.com/photos/1598505/pexels-photo-1598505.jpeg?auto=compress&cs=tinysrgb&w=150', alt='Product')
                    .item-details
                      h4 Premium Cotton Shirt
                      p Size: L, Color: White
                      .item-features
                        span.feature-tag Premium Quality
                        span.feature-tag Free Shipping
                      .item-price $89.99
                    .item-quantity
                      button.qty-btn.minus
                        i.fas.fa-minus
                      input.qty-input(type='number', value='1', min='1')
                      button.qty-btn.plus
                        i.fas.fa-plus
                    .item-total $89.99
                    .item-actions
                      button.action-btn.wishlist
                        i.fas.fa-heart
                      button.action-btn.remove
                        i.fas.fa-trash
                .cart-sidebar
                  .cart-summary
                    h3 Order Summary
                    .summary-row
                      span Subtotal (2 items):
                      span $289.98
                    .summary-row
                      span Shipping:
                      span.free Free
                    .summary-row
                      span Tax:
                      span $23.20
                    .summary-row.discount
                      span Loyalty Discount (10%):
                      span -$28.99
                    .summary-row.total
                      span Total:
                      span $284.19
                    button.btn.btn-primary.checkout-btn
                      i.fas.fa-lock
                      | Secure Checkout
                  .promo-code
                    h4 Promo Code
                    .promo-input
                      input(type='text', placeholder='Enter code')
                      button.btn.btn-outline Apply
            //- Other sections would follow similar patterns...
    script(src='/vanilla-js/client-dashboard.js')