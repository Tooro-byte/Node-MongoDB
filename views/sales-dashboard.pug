doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sales Agent Dashboard - Kings Collection
    link(rel="stylesheet", href="/Styles/sales-dashboard.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;600;700&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")

  body
    //- Top Navigation Bar
    nav.top-nav
      .container
        .nav-content
          .nav-item.notifications
            .nav-icon
              i.fas.fa-bell
              .notification-badge 7
            .nav-label Notifications
            .nav-dropdown
              .notification-header Notifications
              .notification-item
                .notification-icon
                  i.fas.fa-exclamation-triangle
                .notification-content
                  .notification-title Urgent Order
                  .notification-time 5 min ago
              .notification-item
                .notification-icon
                  i.fas.fa-message
                .notification-content
                  .notification-title Customer Inquiry
                  .notification-time 12 min ago
          .nav-item.urgent-orders
            .nav-icon
              i.fas.fa-exclamation-triangle
              .notification-badge 3
            .nav-label Urgent Orders
            .nav-dropdown
              .notification-header Urgent Orders
              .notification-item
                .notification-icon
                  i.fas.fa-clock
                .notification-content
                  .notification-title Order #ORD-2024-1234
                  .notification-time 2 hours overdue
              .notification-item
                .notification-icon
                  i.fas.fa-box
                .notification-content
                  .notification-title Order #ORD-2024-1235
                  .notification-time 1 hour overdue
          .nav-item.customer-inquiries
            .nav-icon
              i.fas.fa-message
              .notification-badge 5
            .nav-label Customer Inquiries
            .nav-dropdown
              .notification-header Customer Inquiries
              .notification-item
                .notification-icon
                  i.fas.fa-user
                .notification-content
                  .notification-title John Smith
                  .notification-time 10 min ago
              .notification-item
                .notification-icon
                  i.fas.fa-user
                .notification-content
                  .notification-title Sarah Johnson
                  .notification-time 15 min ago

    //- Refined Header
    header.header
      .header-background
      .container
        .header-content
          .header-row
            .header-column.header-logo
              .logo-section
                .logo-icon
                  i.fas.fa-crown
                .logo-text
                  .brand-name Kings Collection
                  .brand-tagline Premium Fashion Dashboard
            .header-column.header-welcome
              .welcome-section
                .welcome-message
                  .greeting-text Good Morning,
                  .user-name Alex Thompson
                  .role-badge
                    i.fas.fa-star
                    span Senior Sales Agent
            .header-column.header-clock
              .digital-clock
                .time-display
                  .current-time#currentTime
                  .current-date#currentDate
                .clock-decoration
                  i.fas.fa-clock
            .header-column.header-stats
              .header-stats
                .stat-card.orders
                  .stat-icon
                    i.fas.fa-shopping-cart
                  .stat-content
                    .stat-number 24
                    .stat-label Pending Orders
                  .stat-trend.up +5%
                .stat-card.revenue
                  .stat-icon
                    i.fas.fa-money-bill
                  .stat-content
                    .stat-number UGX 3.2M
                    .stat-label Today's Sales
                  .stat-trend.up +12%
                .stat-card.customers
                  .stat-icon
                    i.fas.fa-users
                  .stat-content
                    .stat-number 18
                    .stat-label New Customers
                  .stat-trend.up +8%
            .header-column.header-actions
              .header-actions
                .user-menu
                  .user-avatar
                    img(src="https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg?auto=compress&cs=tinysrgb&w=60", alt="User Avatar")
                    .status-indicator.online
                  .dropdown-menu
                    .dropdown-header
                      .user-info
                        .user-name Alex Thompson
                        .user-email alex.thompson@kingscollection.com
                    .dropdown-divider
                    a.dropdown-item(href="#" data-action="profile")
                      i.fas.fa-user
                      span Profile Settings
                    a.dropdown-item(href="#" data-action="preferences")
                      i.fas.fa-cog
                      span Preferences
                    a.dropdown-item(href="#" data-action="help")
                      i.fas.fa-question-circle
                      span Help & Support
                    .dropdown-divider
                    a.dropdown-item.logout(href="#" data-action="logout")
                      i.fas.fa-sign-out-alt
                      span Logout

    //- Main Content Area
    main.main-content
      .container
        .quick-actions-bar
          .quick-actions-left
            .action-group.primary-actions
              a.action-btn.primary.new-order(href="/orders")
                i.fas.fa-plus-circle
                span New Order
                .action-shortcut Ctrl+N
              a.action-btn.secondary.pos(href="/api/pos")
                i.fas.fa-cash-register
                span Quick Sale
                .action-shortcut F1
              button.action-btn.secondary.customer-lookup
                i.fas.fa-search-plus
                span Find Customer
                .action-shortcut Ctrl+F
            .action-group.order-actions
              button.action-btn.secondary.approve-order
                i.fas.fa-check-circle
                span Approve
              button.action-btn.secondary.reject-order
                i.fas.fa-times-circle
                span Reject
              button.action-btn.secondary.cancel-order
                i.fas.fa-ban
                span Cancel
          .quick-stats
            .quick-stat
              .stat-value 156
              .stat-label Orders Today
            .quick-stat
              .stat-value UGX 24.5M
              .stat-label Revenue
            .quick-stat
              .stat-value 4.8★
              .stat-label Rating

        .dashboard-layout
          aside.sidebar
            .sidebar-header
              .sidebar-title Navigation
              .sidebar-toggle
                i.fas.fa-bars
            nav.sidebar-nav
              .nav-section
                .section-title Core Functions
                a.nav-item.active(href="/sales-", data-section="dashboard")
                  .nav-icon
                    i.fas.fa-tachometer-alt
                  .nav-content
                    span Dashboard
                    .nav-badge 3
                a.nav-item(href="/orders", data-section="orders")
                  .nav-icon
                    i.fas.fa-shopping-cart
                  .nav-content
                    span Orders
                    .nav-badge.urgent 24
                a.nav-item(href="/pos", data-section="pos")
                  .nav-icon
                    i.fas.fa-cash-register
                  .nav-content
                    span Point of Sale
                    .nav-shortcut F2
                a.nav-item(href="/customers", data-section="customers")
                  .nav-icon
                    i.fas.fa-users
                  .nav-content
                    span Customers
                    .nav-badge 8
                a.nav-item(href="/inventory", data-section="inventory")
                  .nav-icon
                    i.fas.fa-warehouse
                  .nav-content
                    span Inventory
                    .nav-badge.warning 23
              .nav-section
                .section-title Management
                a.nav-item(href="/returns", data-section="returns")
                  .nav-icon
                    i.fas.fa-undo-alt
                  .nav-content
                    span Returns
                    .nav-badge 5
                a.nav-item(href="/tasks", data-section="tasks")
                  .nav-icon
                    i.fas.fa-tasks
                  .nav-content
                    span Tasks
                    .nav-badge.urgent 12
                a.nav-item(href="/messages", data-section="messages")
                  .nav-icon
                    i.fas.fa-comments
                  .nav-content
                    span Messages
                    .nav-badge 7
                a.nav-item(href="/promotions", data-section="promotions")
                  .nav-icon
                    i.fas.fa-tags
                  .nav-content
                    span Promotions
                    .nav-badge.active 4
              .nav-section
                .section-title Analytics & Reports
                a.nav-item(href="/reports", data-section="reports")
                  .nav-icon
                    i.fas.fa-chart-line
                  .nav-content
                    span Reports
                a.nav-item(href="/analytics", data-section="analytics")
                  .nav-icon
                    i.fas.fa-analytics
                  .nav-content
                    span Analytics
              .nav-section
                .section-title Personal
                a.nav-item(href="/schedule", data-section="schedule")
                  .nav-icon
                    i.fas.fa-calendar-alt
                  .nav-content
                    span Schedule
                a.nav-item(href="/training", data-section="training")
                  .nav-icon
                    i.fas.fa-graduation-cap
                  .nav-content
                    span Training
                a.nav-item(href="/settings", data-section="settings")
                  .nav-icon
                    i.fas.fa-cog
                  .nav-content
                    span Settings

          .content-area
            section#dashboard.content-section.active
              .section-header
                .header-content
                  h2 Dashboard Overview
                  p Welcome back! Here's what's happening with your sales today.
                .header-actions
                  .time-filter
                    select.filter-select
                      option(value="today") Today
                      option(value="week") This Week
                      option(value="month") This Month
                  button.btn.btn-primary.refresh-btn
                    i.fas.fa-sync-alt
                    span Refresh

              .dashboard-grid
                .metrics-row
                  .metric-card.sales
                    .card-header
                      .card-icon
                        i.fas.fa-chart-line
                      .card-title Today's Performance
                    .card-content
                      .primary-metric
                        .metric-value UGX 24,580,000
                        .metric-label Revenue
                        .metric-change +12.5%
                      .secondary-metrics
                        .metric-item
                          .metric-number 156
                          .metric-text Orders
                        .metric-item
                          .metric-number UGX 157,692
                          .metric-text Avg Order
                    .card-chart
                      canvas#salesChart

                  .metric-card.orders
                    .card-header
                      .card-icon
                        i.fas.fa-shopping-cart
                      .card-title Order Status
                    .card-content
                      .order-breakdown
                        .order-status
                          .status-indicator.new
                          .status-info
                            .status-count 24
                            .status-label New Orders
                        .order-status
                          .status-indicator.processing
                          .status-info
                            .status-count 18
                            .status-label Processing
                        .order-status
                          .status-indicator.shipped
                          .status-info
                            .status-count 45
                            .status-label Shipped Today
                    .card-action
                      button.btn.btn-outline
                        span View All Orders
                        i.fas.fa-arrow-right

                  .metric-card.customers
                    .card-header
                      .card-icon
                        i.fas.fa-users
                      .card-title Customer Activity
                    .card-content
                      .customer-stats
                        .stat-row
                          .stat-label New Customers
                          .stat-value 18
                          .stat-trend +25%
                        .stat-row
                          .stat-label Returning Customers
                          .stat-value 67
                          .stat-trend +8%
                        .stat-row
                          .stat-label Customer Satisfaction
                          .stat-value 4.8★
                          .stat-trend +0.2
                    .card-chart
                      canvas#customerChart

                .priority-section
                  .section-title
                    h3 Priority Tasks
                    .task-counter
                      span 15 pending
                  .priority-grid
                    .priority-card.urgent
                      .priority-header
                        .priority-icon
                          i.fas.fa-exclamation-triangle
                        .priority-title Urgent Actions
                        .priority-count 3
                      .priority-list
                        .priority-item
                          .item-icon
                            i.fas.fa-clock
                          .item-content
                            .item-title Order #ORD-2024-1234
                            .item-subtitle 2 hours overdue
                          .item-action
                            button.btn.btn-sm.btn-danger Process Now
                        .priority-item
                          .item-icon
                            i.fas.fa-phone
                          .item-content
                            .item-title Call John Smith
                            .item-subtitle Return request follow-up
                          .item-action
                            button.btn.btn-sm.btn-primary Call
                    .priority-card.today
                      .priority-header
                        .priority-icon
                          i.fas.fa-calendar-day
                        .priority-title Today's Tasks
                        .priority-count 8
                      .priority-list
                        .priority-item
                          .item-icon
                            i.fas.fa-box
                          .item-content
                            .item-title Restock Inventory
                            .item-subtitle 5 items low stock
                          .item-action
                            button.btn.btn-sm.btn-warning Review
                        .priority-item
                          .item-icon
                            i.fas.fa-star
                          .item-content
                            .item-title Customer Reviews
                            .item-subtitle 12 pending responses
                          .item-action
                            button.btn.btn-sm.btn-info View

                .activity-section
                  .section-title
                    h3 Recent Activity
                    button.btn.btn-text.view-all View All
                  .activity-feed
                    .activity-item
                      .activity-avatar
                        img(src="https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg?auto=compress&cs=tinysrgb&w=40", alt="Customer")
                      .activity-content
                        .activity-text
                          strong John Smith
                          span placed a new order
                          strong #ORD-2024-1237
                        .activity-time 2 minutes ago
                      .activity-action
                        button.btn.btn-sm.btn-outline View Order
                    .activity-item
                      .activity-avatar
                        .avatar-icon
                          i.fas.fa-truck
                      .activity-content
                        .activity-text
                          span Order
                          strong #ORD-2024-1230
                          span was shipped to Sarah Johnson
                        .activity-time 15 minutes ago
                      .activity-action
                        button.btn.btn-sm.btn-outline Track
                    .activity-item
                      .activity-avatar
                        .avatar-icon
                          i.fas.fa-star
                      .activity-content
                        .activity-text
                          strong Mike Wilson
                          span left a 5-star review
                        .activity-time 1 hour ago
                      .activity-action
                        button.btn.btn-sm.btn-outline View Review

            section#pos.content-section
              .section-header
                .header-content
                  h2 Point of Sale
                  p Process in-store transactions and quick sales
                .header-actions
                  button.btn.btn-secondary
                    i.fas.fa-history
                    span Transaction History
                  button.btn.btn-primary
                    i.fas.fa-plus
                    span New Transaction
              .pos-interface
                .pos-left
                  .product-search
                    .search-container
                      input.search-input#productSearch(type="text", placeholder="Search products or scan barcode...")
                      button.search-btn
                        i.fas.fa-search
                      button.barcode-btn
                        i.fas.fa-barcode
                  .product-grid#productGrid
                    //-Products populated dynamically via JavaScript
                .pos-right
                  .cart-section
                    .cart-header
                      h3 Current Sale
                      button.btn.btn-text.clear-cart Clear All
                    .cart-items#cartItems
                      .empty-cart
                        i.fas.fa-shopping-cart
                        p Add items to start a sale
                    .cart-summary
                      .summary-row
                        span Subtotal:
                        span.subtotal UGX 0
                      .summary-row.discount
                        span Discount:
                        span.discount-amount UGX 0
                      .summary-row.tax
                        span Tax (8.5%):
                        span.tax-amount UGX 0
                      .summary-row.total
                        span Total:
                        span.total-amount UGX 0
                    .payment-section
                      .payment-methods
                        button.payment-btn.active(data-method="cash")
                          i.fas.fa-money-bill
                          span Cash
                        button.payment-btn(data-method="card")
                          i.fas.fa-credit-card
                          span Card
                        button.payment-btn(data-method="digital")
                          i.fas.fa-mobile-alt
                          span Digital
                      .payment-input
                        input.payment-amount(type="number", placeholder="Amount received", step="0.01")
                        .change-amount
                          span Change: UGX 0
                      .checkout-actions
                        button.btn.btn-secondary.hold-sale
                          i.fas.fa-pause
                          span Hold Sale
                        button.btn.btn-primary.complete-sale
                          i.fas.fa-check
                          span Complete Sale

    .toast-container#toastContainer
    script(src='/vanilla-js/sales-dashboard.js')