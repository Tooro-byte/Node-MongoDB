doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sales Agent Dashboard - MenStyle Store
    link(rel="stylesheet", href="/Styles/sales-dashboard.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")

  body
    //-Header
    header.header
      .container
        .header-content
          .logo
            i.fas.fa-tshirt
            span MenStyle
            .role-badge Sales Agent
          .header-stats
            .stat-item
              .stat-number 24
              .stat-label Pending Orders
            .stat-item
              .stat-number 8
              .stat-label New Inquiries
            .stat-item
              .stat-number 156
              .stat-label Orders Today
          .header-actions
            .notifications-icon
              i.fas.fa-bell
              span.notification-count 12
            .user-menu
              .user-avatar
                i.fas.fa-user-tie
              .dropdown-menu
                a(href="#") Profile Settings
                a(href="#") Help & Support
                a(href="/logout") Logout

    //-Main Content
    main.main-content
      .container
        //-Quick Actions Bar
        .quick-actions
          button.action-btn.primary
            i.fas.fa-plus
            span New Order
          button.action-btn.secondary
            i.fas.fa-search
            span Find Customer
          button.action-btn.secondary
            i.fas.fa-barcode
            span Check Inventory
          button.action-btn.secondary
            i.fas.fa-print
            span Print Labels
          button.action-btn.secondary
            i.fas.fa-download
            span Export Data

        //-Dashboard Grid
        .dashboard-grid
          //-Sidebar Navigation
          aside.sidebar
            nav.sidebar-nav
              a.nav-item.active(href="#" data-section="overview")
                i.fas.fa-tachometer-alt
                span Overview
                span.count 24
              a.nav-item(href="#" data-section="orders")
                i.fas.fa-box
                span Order Queue
                span.count 18
              a.nav-item(href="#" data-section="customers")
                i.fas.fa-users
                span Customers
              a.nav-item(href="#" data-section="inquiries")
                i.fas.fa-comments
                span Inquiries
                span.count 8
              a.nav-item(href="#" data-section="returns")
                i.fas.fa-undo
                span Returns
                span.count 5
              a.nav-item(href="#" data-section="inventory")
                i.fas.fa-warehouse
                span Inventory
              a.nav-item(href="#" data-section="analytics")
                i.fas.fa-chart-line
                span Analytics
              a.nav-item(href="#" data-section="tools")
                i.fas.fa-tools
                span Tools

          //-Main Dashboard Content
          .dashboard-content
            //-Overview Section
            section#overview.content-section.active
              .section-header
                h2 Sales Agent Overview
                p Manage orders, assist customers, and track performance
                .time-filter
                  select.filter-select
                    option(value="today") Today
                    option(value="week") This Week
                    option(value="month") This Month

              //-Performance Metrics
              .metrics-grid
                .metric-card.orders
                  .metric-icon
                    i.fas.fa-shopping-cart
                  .metric-content
                    .metric-number 156
                    .metric-label Orders Processed
                    .metric-change +12%
                  .metric-chart
                    canvas#ordersChart

                .metric-card.revenue
                  .metric-icon
                    i.fas.fa-dollar-sign
                  .metric-content
                    .metric-number $24,580
                    .metric-label Revenue Generated
                    .metric-change +8%
                  .metric-chart
                    canvas#revenueChart

                .metric-card.customers
                  .metric-icon
                    i.fas.fa-user-friends
                  .metric-content
                    .metric-number 89
                    .metric-label Customers Helped
                    .metric-change +15%
                  .metric-chart
                    canvas#customersChart

                .metric-card.satisfaction
                  .metric-icon
                    i.fas.fa-star
                  .metric-content
                    .metric-number 4.8
                    .metric-label Avg Rating
                    .metric-change +0.2
                  .metric-chart
                    canvas#satisfactionChart

              //-Priority Tasks
              .priority-section
                h3 Priority Tasks
                .task-grid
                  .task-card.urgent
                    .task-header
                      .task-icon
                        i.fas.fa-exclamation-triangle
                      .task-title Urgent Orders
                      .task-count 3
                    .task-list
                      .task-item
                        span Order #ORD-2024-1234
                        .task-time 2 hours overdue
                      .task-item
                        span Order #ORD-2024-1235
                        .task-time 1 hour overdue
                      .task-item
                        span Order #ORD-2024-1236
                        .task-time 30 mins overdue

                  .task-card.pending
                    .task-header
                      .task-icon
                        i.fas.fa-clock
                      .task-title Pending Approvals
                      .task-count 8
                    .task-list
                      .task-item
                        span Return Request #RTN-001
                        .task-time 2 hours ago
                      .task-item
                        span Refund Request #REF-045
                        .task-time 4 hours ago
                      .task-item
                        span Exchange Request #EXC-023
                        .task-time 6 hours ago

                  .task-card.follow-up
                    .task-header
                      .task-icon
                        i.fas.fa-phone
                      .task-title Follow-ups
                      .task-count 12
                    .task-list
                      .task-item
                        span Customer: John Smith
                        .task-time Call scheduled 2 PM
                      .task-item
                        span Customer: Sarah Johnson
                        .task-time Email sent, awaiting reply
                      .task-item
                        span Customer: Mike Wilson
                        .task-time Order inquiry pending

            //-Order Queue Section
            section#orders.content-section
              .section-header
                h2 Order Processing Queue
                p Manage and process customer orders efficiently
                .order-filters
                  select.filter-select
                    option(value="all") All Orders
                    option(value="new") New Orders
                    option(value="processing") Processing
                    option(value="ready") Ready to Ship
                    option(value="shipped") Shipped
                  input.search-input(type="text", placeholder="Search orders...")
                  button.btn.btn-primary
                    i.fas.fa-filter
                    span Advanced Filter

              .orders-container
                .orders-header
                  .bulk-actions
                    input.bulk-select(type="checkbox")
                    button.bulk-btn
                      i.fas.fa-check
                      span Mark as Processed
                    button.bulk-btn
                      i.fas.fa-print
                      span Print Labels
                    button.bulk-btn
                      i.fas.fa-truck
                      span Ship Selected

                .orders-list
                  .order-item.priority-high
                    .order-checkbox
                      input(type="checkbox")
                    .order-info
                      .order-number #ORD-2024-1234
                      .order-customer John Smith
                      .order-date March 15, 2024 - 2:30 PM
                      .order-priority
                        i.fas.fa-exclamation-circle
                        span High Priority
                    .order-details
                      .order-items 3 items
                      .order-total $299.97
                      .order-shipping Express Delivery
                    .order-status
                      .status-badge.new New Order
                      .time-elapsed 2h 15m
                    .order-actions
                      button.action-btn.primary
                        i.fas.fa-play
                        span Process
                      button.action-btn.secondary
                        i.fas.fa-eye
                        span View
                      button.action-btn.secondary
                        i.fas.fa-comment
                        span Message

                  .order-item
                    .order-checkbox
                      input(type="checkbox")
                    .order-info
                      .order-number #ORD-2024-1235
                      .order-customer Sarah Johnson
                      .order-date March 15, 2024 - 1:45 PM
                    .order-details
                      .order-items 2 items
                      .order-total $189.98
                      .order-shipping Standard Delivery
                    .order-status
                      .status-badge.processing Processing
                      .time-elapsed 3h 0m
                    .order-actions
                      button.action-btn.primary
                        i.fas.fa-truck
                        span Ship
                      button.action-btn.secondary
                        i.fas.fa-eye
                        span View
                      button.action-btn.secondary
                        i.fas.fa-print
                        span Label

                  .order-item
                    .order-checkbox
                      input(type="checkbox")
                    .order-info
                      .order-number #ORD-2024-1236
                      .order-customer Mike Wilson
                      .order-date March 15, 2024 - 12:20 PM
                    .order-details
                      .order-items 1 item
                      .order-total $129.99
                      .order-shipping Standard Delivery
                    .order-status
                      .status-badge.ready Ready to Ship
                      .time-elapsed 4h 25m
                    .order-actions
                      button.action-btn.primary
                        i.fas.fa-shipping-fast
                        span Ship Now
                      button.action-btn.secondary
                        i.fas.fa-eye
                        span View
                      button.action-btn.secondary
                        i.fas.fa-barcode
                        span Track

            //-Customer Management Section
            section#customers.content-section
              .section-header
                h2 Customer Management
                p Search, view, and manage customer accounts
                .customer-search
                  .search-container
                    input.search-input(type="text", placeholder="Search by name, email, or order number...")
                    button.search-btn
                      i.fas.fa-search
                  .search-filters
                    select.filter-select
                      option(value="all") All Customers
                      option(value="vip") VIP Customers
                      option(value="new") New Customers
                      option(value="inactive") Inactive
                    select.filter-select
                      option(value="all") All Time
                      option(value="30days") Last 30 Days
                      option(value="90days") Last 90 Days

              .customers-container
                .customers-grid
                  .customer-card.vip
                    .customer-avatar
                      img(src="https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg?auto=compress&cs=tinysrgb&w=100", alt="Customer")
                      .vip-badge VIP
                    .customer-info
                      .customer-name John Smith
                      .customer-email john.smith@email.com
                      .customer-phone +1 (555) 123-4567
                      .customer-stats
                        .stat
                          span 24 Orders
                        .stat
                          span $2,450 Spent
                        .stat
                          span Last: Mar 15
                    .customer-actions
                      button.btn.btn-primary
                        i.fas.fa-comment
                        span Message
                      button.btn.btn-secondary
                        i.fas.fa-eye
                        span View Profile
                      button.btn.btn-secondary
                        i.fas.fa-history
                        span Order History

                  .customer-card
                    .customer-avatar
                      img(src="https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=100", alt="Customer")
                    .customer-info
                      .customer-name Sarah Johnson
                      .customer-email sarah.j@email.com
                      .customer-phone +1 (555) 987-6543
                      .customer-stats
                        .stat
                          span 8 Orders
                        .stat
                          span $890 Spent
                        .stat
                          span Last: Mar 14
                    .customer-actions
                      button.btn.btn-primary
                        i.fas.fa-comment
                        span Message
                      button.btn.btn-secondary
                        i.fas.fa-eye
                        span View Profile
                      button.btn.btn-secondary
                        i.fas.fa-history
                        span Order History

                  .customer-card.new
                    .customer-avatar
                      img(src="https://images.pexels.com/photos/1043471/pexels-photo-1043471.jpeg?auto=compress&cs=tinysrgb&w=100", alt="Customer")
                      .new-badge New
                    .customer-info
                      .customer-name Mike Wilson
                      .customer-email mike.w@email.com
                      .customer-phone +1 (555) 456-7890
                      .customer-stats
                        .stat
                          span 1 Order
                        .stat
                          span $129 Spent
                        .stat
                          span Last: Today
                    .customer-actions
                      button.btn.btn-primary
                        i.fas.fa-comment
                        span Message
                      button.btn.btn-secondary
                        i.fas.fa-eye
                        span View Profile
                      button.btn.btn-secondary
                        i.fas.fa-gift
                        span Welcome Offer

            //-Customer Inquiries Section
            section#inquiries.content-section
              .section-header
                h2 Customer Inquiries
                p Respond to customer questions and support requests
                .inquiry-filters
                  select.filter-select
                    option(value="all") All Inquiries
                    option(value="new") New
                    option(value="pending") Pending Response
                    option(value="resolved") Resolved
                  select.filter-select
                    option(value="all") All Types
                    option(value="order") Order Issues
                    option(value="product") Product Questions
                    option(value="shipping") Shipping
                    option(value="return") Returns

              .inquiries-container
                .inquiry-item.urgent
                  .inquiry-header
                    .customer-info
                      .customer-avatar
                        img(src="https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg?auto=compress&cs=tinysrgb&w=50", alt="Customer")
                      .customer-details
                        .customer-name John Smith
                        .inquiry-time 2 hours ago
                        .inquiry-type Order Issue
                    .inquiry-status
                      .status-badge.urgent Urgent
                      .priority-indicator
                        i.fas.fa-exclamation-triangle
                  .inquiry-content
                    .inquiry-subject Order #ORD-2024-1234 - Missing Item
                    .inquiry-preview "Hi, I received my order today but one of the items (Blue Polo Shirt - Size L) is missing from the package. Could you please help me resolve this issue?"
                  .inquiry-actions
                    button.btn.btn-primary
                      i.fas.fa-reply
                      span Respond
                    button.btn.btn-secondary
                      i.fas.fa-eye
                      span View Full
                    button.btn.btn-secondary
                      i.fas.fa-phone
                      span Call Customer

                .inquiry-item
                  .inquiry-header
                    .customer-info
                      .customer-avatar
                        img(src="https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=50", alt="Customer")
                      .customer-details
                        .customer-name Sarah Johnson
                        .inquiry-time 4 hours ago
                        .inquiry-type Product Question
                    .inquiry-status
                      .status-badge.new New
                  .inquiry-content
                    .inquiry-subject Size Guide Question - Leather Jacket
                    .inquiry-preview "Hello, I'm interested in purchasing the Brown Leather Jacket but I'm unsure about the sizing. Could you provide more detailed measurements for size M?"
                  .inquiry-actions
                    button.btn.btn-primary
                      i.fas.fa-reply
                      span Respond
                    button.btn.btn-secondary
                      i.fas.fa-eye
                      span View Full
                    button.btn.btn-secondary
                      i.fas.fa-ruler
                      span Size Guide

            //-Returns Section
            section#returns.content-section
              .section-header
                h2 Returns & Exchanges
                p Process return requests and manage exchanges
                .return-filters
                  select.filter-select
                    option(value="all") All Returns
                    option(value="pending") Pending Review
                    option(value="approved") Approved
                    option(value="processing") Processing
                    option(value="completed") Completed
                  select.filter-select
                    option(value="all") All Reasons
                    option(value="defective") Defective
                    option(value="wrong-size") Wrong Size
                    option(value="not-as-described") Not as Described

              .returns-container
                .return-item
                  .return-header
                    .return-info
                      .return-number #RTN-2024-001
                      .original-order Order #ORD-2024-1200
                      .return-date Requested: March 14, 2024
                    .return-status
                      .status-badge.pending Pending Review
                      .return-value $89.99
                  .return-details
                    .customer-info
                      .customer-name Customer: John Smith
                      .customer-email john.smith@email.com
                    .return-reason
                      .reason-label Reason: Wrong Size
                      .reason-description "Ordered Large but need Medium size"
                    .return-items
                      .item
                        img(src="https://images.pexels.com/photos/1598505/pexels-photo-1598505.jpeg?auto=compress&cs=tinysrgb&w=60", alt="Product")
                        .item-details
                          .item-name Classic White Shirt
                          .item-size Size: L → M (Exchange)
                          .item-price $89.99
                  .return-actions
                    button.btn.btn-success
                      i.fas.fa-check
                      span Approve
                    button.btn.btn-danger
                      i.fas.fa-times
                      span Decline
                    button.btn.btn-secondary
                      i.fas.fa-comment
                      span Message Customer

                .return-item
                  .return-header
                    .return-info
                      .return-number #RTN-2024-002
                      .original-order Order #ORD-2024-1185
                      .return-date Requested: March 13, 2024
                    .return-status
                      .status-badge.approved Approved
                      .return-value $129.99
                  .return-details
                    .customer-info
                      .customer-name Customer: Mike Wilson
                      .customer-email mike.w@email.com
                    .return-reason
                      .reason-label Reason: Defective Item
                      .reason-description "Zipper is broken on arrival"
                    .return-items
                      .item
                        img(src="https://images.pexels.com/photos/1598507/pexels-photo-1598507.jpeg?auto=compress&cs=tinysrgb&w=60", alt="Product")
                        .item-details
                          .item-name Denim Jacket
                          .item-size Size: M
                          .item-price $129.99
                  .return-actions
                    button.btn.btn-primary
                      i.fas.fa-shipping-fast
                      span Process Return
                    button.btn.btn-secondary
                      i.fas.fa-print
                      span Print Label
                    button.btn.btn-secondary
                      i.fas.fa-eye
                      span View Details

            //-Inventory Section
            section#inventory.content-section
              .section-header
                h2 Inventory Management
                p Check stock levels and manage product availability
                .inventory-search
                  input.search-input(type="text", placeholder="Search products by name, SKU, or category...")
                  button.search-btn
                    i.fas.fa-search
                  button.btn.btn-secondary
                    i.fas.fa-barcode
                    span Scan Barcode

              .inventory-container
                .inventory-stats
                  .stat-card.low-stock
                    .stat-icon
                      i.fas.fa-exclamation-triangle
                    .stat-content
                      .stat-number 23
                      .stat-label Low Stock Items
                    .stat-action
                      button.btn.btn-warning View All

                  .stat-card.out-of-stock
                    .stat-icon
                      i.fas.fa-times-circle
                    .stat-content
                      .stat-number 8
                      .stat-label Out of Stock
                    .stat-action
                      button.btn.btn-danger View All

                  .stat-card.total-products
                    .stat-icon
                      i.fas.fa-boxes
                    .stat-content
                      .stat-number 1,247
                      .stat-label Total Products
                    .stat-action
                      button.btn.btn-primary View All

                .inventory-grid
                  .inventory-item.low-stock
                    .product-image
                      img(src="https://images.pexels.com/photos/1598505/pexels-photo-1598505.jpeg?auto=compress&cs=tinysrgb&w=100", alt="Product")
                      .stock-indicator.low Low Stock
                    .product-info
                      .product-name Classic White Shirt
                      .product-sku SKU: CWS-001
                      .product-category Shirts
                    .stock-info
                      .stock-levels
                        .size-stock
                          span S: 2
                        .size-stock
                          span M: 1
                        .size-stock.critical
                          span L: 0
                        .size-stock
                          span XL: 3
                      .total-stock Total: 6 units
                    .inventory-actions
                      button.btn.btn-primary
                        i.fas.fa-plus
                        span Restock
                      button.btn.btn-secondary
                        i.fas.fa-edit
                        span Update

                  .inventory-item
                    .product-image
                      img(src="https://images.pexels.com/photos/1598507/pexels-photo-1598507.jpeg?auto=compress&cs=tinysrgb&w=100", alt="Product")
                      .stock-indicator.good In Stock
                    .product-info
                      .product-name Denim Jacket
                      .product-sku SKU: DJ-002
                      .product-category Jackets
                    .stock-info
                      .stock-levels
                        .size-stock
                          span S: 15
                        .size-stock
                          span M: 22
                        .size-stock
                          span L: 18
                        .size-stock
                          span XL: 12
                      .total-stock Total: 67 units
                    .inventory-actions
                      button.btn.btn-secondary
                        i.fas.fa-eye
                        span View Details
                      button.btn.btn-secondary
                        i.fas.fa-edit
                        span Update

            //-Analytics Section
            section#analytics.content-section
              .section-header
                h2 Sales Analytics
                p Track your performance and sales metrics
                .analytics-filters
                  select.filter-select
                    option(value="today") Today
                    option(value="week") This Week
                    option(value="month") This Month
                    option(value="quarter") This Quarter

              .analytics-container
                .analytics-overview
                  .overview-card
                    .card-header
                      h3 Sales Performance
                      .card-actions
                        button.btn.btn-secondary
                          i.fas.fa-download
                          span Export
                    .card-content
                      .performance-chart
                        canvas#performanceChart
                      .performance-stats
                        .stat-item
                          .stat-label Orders Processed
                          .stat-value 156
                          .stat-change +12%
                        .stat-item
                          .stat-label Revenue Generated
                          .stat-value $24,580
                          .stat-change +8%
                        .stat-item
                          .stat-label Avg Order Value
                          .stat-value $157.69
                          .stat-change +3%

                  .overview-card
                    .card-header
                      h3 Customer Satisfaction
                      .card-actions
                        button.btn.btn-secondary
                          i.fas.fa-star
                          span Reviews
                    .card-content
                      .satisfaction-metrics
                        .metric-circle
                          .circle-progress(data-percentage="96")
                            .circle-text 96%
                          .circle-label Overall Rating
                        .satisfaction-breakdown
                          .rating-bar
                            .rating-label 5 Stars
                            .rating-progress
                              .progress-fill(style="width: 78%")
                            .rating-count 78%
                          .rating-bar
                            .rating-label 4 Stars
                            .rating-progress
                              .progress-fill(style="width: 18%")
                            .rating-count 18%
                          .rating-bar
                            .rating-label 3 Stars
                            .rating-progress
                              .progress-fill(style="width: 3%")
                            .rating-count 3%
                          .rating-bar
                            .rating-label 2 Stars
                            .rating-progress
                              .progress-fill(style="width: 1%")
                            .rating-count 1%

            //-Tools Section
            section#tools.content-section
              .section-header
                h2 Sales Tools
                p Helpful tools to streamline your workflow
              
              .tools-container
                .tools-grid
                  .tool-card
                    .tool-icon
                      i.fas.fa-calculator
                    .tool-content
                      .tool-title Shipping Calculator
                      .tool-description Calculate shipping costs and delivery times
                    .tool-action
                      button.btn.btn-primary Launch Tool

                  .tool-card
                    .tool-icon
                      i.fas.fa-qrcode
                    .tool-content
                      .tool-title QR Code Generator
                      .tool-description Generate QR codes for orders and products
                    .tool-action
                      button.btn.btn-primary Launch Tool

                  .tool-card
                    .tool-icon
                      i.fas.fa-file-export
                    .tool-content
                      .tool-title Bulk Export
                      .tool-description Export orders, customers, and inventory data
                    .tool-action
                      button.btn.btn-primary Launch Tool

                  .tool-card
                    .tool-icon
                      i.fas.fa-tags
                    .tool-content
                      .tool-title Label Printer
                      .tool-description Print shipping labels and product tags
                    .tool-action
                      button.btn.btn-primary Launch Tool

    //-Modals and Overlays
    .modal-overlay#orderModal
      .modal-content
        .modal-header
          h3 Order Details
          button.modal-close
            i.fas.fa-times
        .modal-body
          //-Order details will be populated here
        .modal-footer
          button.btn.btn-secondary Cancel
          button.btn.btn-primary Save Changes

    .modal-overlay#customerModal
      .modal-content
        .modal-header
          h3 Customer Profile
          button.modal-close
            i.fas.fa-times
        .modal-body
          //-Customer details will be populated here
        .modal-footer
          button.btn.btn-secondary Close
          button.btn.btn-primary Send Message

    //-Toast Notifications
    .toast-container#toastContainer

    script(src="/vanilla-js/sales-dashboard.js")