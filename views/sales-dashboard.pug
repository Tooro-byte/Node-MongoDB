                  i.fas.fa-crown
                .logo-text
                  .brand-name Kings Collection
                  .brand-tagline Premium Fashion Dashboard
            .header-column.header-welcome
              .welcome-section
                .welcome-message
                  .greeting-text Good Morning,
                  .user-name Alex Thompson
                  .role-badge
