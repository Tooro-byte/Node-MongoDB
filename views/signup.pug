doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sign Up - Create Your Account
    link(rel="stylesheet", href="/Styles/signup.css")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css", rel="stylesheet")

  body
    .container
      .signup-wrapper
        .signup-header
          h1.logo
            i.fas.fa-user-plus
            | KINGS COLLECTION
          p.subtitle Join us by signing up with your preferred method

        .tab-buttons
          button.tab-btn.active(data-tab="email-tab") Email & Password
          button.tab-btn(data-tab="social-tab") Social Login

        .tab.active#email-tab
          form.signup-form(action="/signup/email", method="POST", id="emailForm")
            .form-row
              .form-group
                label(for="name-email")
                  i.fas.fa-user
                  | Full Name
                input(type="text", id="name-email", name="name", placeholder="Enter your full name", required, autocomplete="name")
                .error-message
            .form-row
              .form-group
                label(for="email-email")
                  i.fas.fa-envelope
                  | Email Address
                input(type="email", id="email-email", name="email", placeholder="Enter your email address", required, autocomplete="email")
                .error-message
            .form-row
              .form-group
                label(for="password-email")
                  i.fas.fa-lock
                  | Password
                .password-input-wrapper
                  input(type="password", id="password-email", name="password", placeholder="Create a password", required, autocomplete="new-password")
                  button.password-toggle(type="button")
                    i.fas.fa-eye
                .error-message
                .password-strength
                  .strength-bar
                    .strength-fill
                  span.strength-text
            .form-row
              .form-group
                label(for="confirm-password-email")
                  i.fas.fa-lock
                  | Confirm Password
                input(type="password", id="confirm-password-email", name="confirmPassword", placeholder="Confirm your password", required, autocomplete="new-password")
                .error-message
            .form-row
              .form-group
                label(for="role")
                  i.fas.fa-briefcase
                  | Role
                select(id="role", name="role", required)
                  option(value="", disabled, selected) Select your role
                  option(value="client") Client
                  option(value="admin") Admin
                  option(value="salesAgent") Sales Agent
                .error-message
            .form-row#mailingAddressRow
              .form-group
                label(for="mailingAddress")
                  i.fas.fa-map-marker-alt
                  | Mailing Address
                textarea(id="mailingAddress", name="mailingAddress", placeholder="Enter your mailing address")
                .error-message
            .terms-row
              .checkbox-group
                input(type="checkbox", id="terms-email", name="terms", required)
                label(for="terms-email")
                  | I agree to the 
                  a(href="/terms") Terms of Service
                  |  and 
                  a(href="/privacy") Privacy Policy
                .error-message
            .newsletter-row
              .checkbox-group
                input(type="checkbox", id="newsletter-email", name="newsletter")
                label(for="newsletter-email") Subscribe to our newsletter
            button.submit-btn(type="submit")
              i.fas.fa-user-plus
              | Sign Up
              .loading-spinner
                i.fas.fa-spinner

        .tab#social-tab
          .social-signup
            p Sign up using your social media account
            .social-buttons
              a.social-btn.google(href="/api/auth/google")
                i.fab.fa-google
                | Continue with Google
              a.social-btn.facebook(href="/api/auth/facebook")
                i.fab.fa-facebook-f
                | Continue with Facebook

        .signup-footer
          p Already have an account? 
            a(href="/login") Log in here

    script(src="/vanilla-js/signup.js")